
frontColor = lightblue
hoverColor = blue
dragBorderColor = purple

borderThickness = 2px

horizontal-center
	margin-left auto
	margin-right auto

.front-panel 
	background-color frontColor

#home  
	@extends .front-panel
	margin-top 10em
	margin-left auto
	margin-right auto
	padding 3em
	max-width 20em 

.participants
	position relative
	
.participant-group
	// border 2px dashed lightblue
	margin-top 10px
	border-radius 10px
	position relative

participantBorderSize = 2px
.participant
	position absolute
	width 120px
	height 120px
	color darkgray
	border participantBorderSize dashed transparent
	border-radius 50%
	div
		position absolute
		top 10px
		text-align center
		width 100%
		height 100%
		img
			width 80px
			height 80px
			border 1px solid darkgray

.drag-over
	border participantBorderSize dotted lightblue
	border-radius 50%

#add-debt-container
	z-index 100
	width 100%
	height 100%
	position absolute
	form
		border 2px solid lightblue
		border-radius 10px
		margin-left auto
		margin-right auto
		width 300px
		padding 15px

#debts
	margin-top 10px

.debt-avatars
	img
		width 32px
		height 32px

.edit
	display none 

.editing  
	.edit
		display block  
	.hide-on-edit
		display none !important 

