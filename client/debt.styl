
frontColor = lightblue
hoverColor = blue
dragBorderColor = purple

borderThickness = 2px

.front-panel 
	background-color frontColor

#home  
	@extends .front-panel
	margin-top 10em
	margin-left auto
	margin-right auto
	padding 3em
	max-width 20em 

.participant-group
	rect
		stroke black
		fill-opacity 0
	g
		circle
			fill orange
		text
			fill blue
			font-family Verdana
			font-size 11em

.drag-over
	@extends .participant-group
	rect
		stroke red

svg
	margin 30px
	border 2px dashed lightblue
	border-radius 10px

.participant-expenses
	float right

.drag-over 
	background-color darken(frontColor, 30%)
	border borderThickness dashed dragBorderColor

.edit
	display none 

.editing  
	.edit
		display block  
	.hide-on-edit
		display none !important 

