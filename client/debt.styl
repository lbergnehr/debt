
frontColor = lightblue
hoverColor = blue
dragBorderColor = purple

borderThickness = 2px

.front-panel 
	background-color frontColor

#home  
	@extends .front-panel
	margin-top 10em
	margin-left auto
	margin-right auto
	padding 3em
	max-width 20em 
	
.participant-group
	border 2px dashed lightblue
	border-radius 10px
	position relative

participantBorderSize = 2px
.participant
	position absolute
	div
		border participantBorderSize dashed transparent
		text-align center
		width 100%
		height 100%
	img
		width 80px
		height 80px

.drag-over
	border participantBorderSize dashed lightblue
	border-radius 4px

#debts
	margin-top 10px

.debt-avatars
	img
		width 32px
		height 32px

.edit
	display none 

.editing  
	.edit
		display block  
	.hide-on-edit
		display none !important 

